<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA7773"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/intent2img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/one"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/intent2txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Pushups"
        android:textAlignment="center"
        android:textColor="#2B2B52"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intent2img"
        app:layout_constraintVertical_bias="0.0">

    </TextView>

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center_horizontal"
        android:text="Timer"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intent2txt" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="400dp"
        android:layout_height="7dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:outlineSpotShadowColor="#FFF222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intent2txt"
        app:layout_constraintVertical_bias="0.803" />

    <EditText
        android:id="@+id/sets"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:hint="Number of sets u want to do ?"
        android:inputType="number"
        android:textAlignment="gravity"
        android:textColorHint="#2C3335"
        android:textColor="#2C3335"
        android:textSize="25dp"
        android:ems="10"
        app:layout_constraintBottom_toTopOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intent2txt" />

</androidx.constraintlayout.widget.ConstraintLayout>